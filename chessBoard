function chessBoard(num)
{

    for(var i=0; i<num; i++)
    {

    for(var str='#'; str.length<num; str+=' #')
    {
        
        if((str.length===num-1) && (i%2 === 0)){
            console.log(str);
            
        }
        
       else if ((str.length===num-1) && (i%2 === 1))
        {
         console.log(" " + str);
        }
        
        }

    }

   
    
}
    chessBoard(4);
    
